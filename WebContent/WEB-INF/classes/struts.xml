<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
 
	<package name="default" extends="struts-default">
	 
		<action name="login" class="com.dan.database.LoginAction">
			<result name="success">/employeeFind.jsp</result>
			<result name="error">/loginFailed.jsp</result>
		</action>
		<action name="findEmployee" class="com.dan.database.FindEmployeeAction">
			<result name="success">/employeeFound.jsp</result>
			<result name="error">/employeeNotFound.jsp</result>
		</action>
	</package>

</struts>